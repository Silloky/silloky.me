---
import { Icon } from "astro-icon/components";
import Avatar from "../assets/avataaars.svg";

var currentPage = "home";
---

<div id="home-container">
    <div id="intro">
        <div id="hero-anim">
            <h1 id="hero-name"></h1>
            <h2 id="hero-role"></h2>
        </div>
        <div id="learn-more" style="opacity: 0;">
            <span>Scroll to learn more</span>
            <Icon name="cuida:caret-down-outline" size="100%" />
        </div>
    </div>
    <div id="home-presentation">
        <div class="presentation-section" id="about-me">
            <div class="section-overview">
                <Icon name={"fluent-color:receipt-20"} size="100%" />
                <!-- <img src={Avatar.src} alt="My avatar" /> -->
                <div class="overview-text">
                    <h2>About Me</h2>
                    <h3>Check out my <a href="./resume">resume</a></h3>
                </div>
            </div>
            <div class="section-information">about-info</div>
        </div>
        <div class="presentation-section" id="portfolio-presentation">
            <div class="section-overview">
                <Icon name={"fluent-color:document-folder-20"} size="100%" />
                <div class="overview-text">
                    <h2>Portfolio</h2>
                    <h3>
                        Go to the <a href="./portfolio">dedicated page</a>
                    </h3>
                </div>
            </div>
            <div class="section-information">resent-info</div>
        </div>
        <div class="presentation-section" id="blog-presentation">
            <div class="section-overview">
                <!-- <img src={Avatar.src} alt="My avatar" /> -->
                <Icon name={"fluent-color:news-20"} size="100%" />
                <div class="overview-text">
                    <h2>Blog</h2>
                    <h3><a href="./blog">Check out all the posts</a></h3>
                </div>
            </div>
            <div class="section-information">blog info</div>
        </div>
    </div>
</div>

<style>
    #home-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        width: 100%;
        background-color: var(--licorice);
        color: white;
    }

    #intro {
        display: grid;
        grid-template-rows: 3.5fr 1fr;
        justify-content: space-evenly;
        align-items: center;
        width: 100%;
        height: 87.5vh;
    }

    #hero-anim {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        font-family: monospace;
    }

    h1#hero-name {
        font-size: 4.5rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 0px 0px 0.6ch #ffffffbd;
    }

    h2#hero-role {
        font-size: 2.5rem;
        font-weight: 500;
        text-align: center;
        text-shadow: 0px 0px 1.2ch white;
    }

    #hero-role div {
        /* SEE INLINE CSS BELOW */
    }

    #learn-more {
        font-family: "Gugi", system-ui;
        display: grid;
        grid-template-rows: 1fr 2fr;
        height: 10vh;
        text-align: center;
        transition: opacity 1s ease-in-out;
        animation: arrow-bounce 2s infinite;
    }

    @keyframes arrow-bounce {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-2vh);
        }
    }

    #learn-more svg {
        animation: arrow-bounce 2s infinite;
    }

    #learn-more:hover {
        cursor: pointer;
    }

    #home-presentation {
        display: flex;
        flex-direction: column;
        width: 90%;
        margin: 15vh 5%;
        gap: 15vh;
    }

    .presentation-section {
        display: grid;
        grid-template-columns: 1fr 2fr;
        backdrop-filter: blur(15px);
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        padding: 20px;
        color: white;
        /* min-height: 60vh; */
        background: color-mix(in srgb, var(--raisin), transparent 76%);
        border: 2px solid var(--raisin);
    }

    .section-overview {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .section-overview svg {
        width: 70%;
        min-height: 27vh;
    }

    .overview-text {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        font-family: "Gugi";
        margin-bottom: 25px;
    }

    .overview-text h2 {
        font-size: 2em;
        margin: 0;
    }

    .overview-text h2::after {
        content: "";
        display: block;
        height: 0.4em;
        background: color-mix(in srgb, var(--goldenrod), transparent 20%);
        transform: skew(15deg) translate(-3px, -14px);
        position: relative;
        z-index: -1;
    }

    .overview-text h3 {
        padding: 12px;
        border-radius: 16px;
        border: 1px solid var(--goldenrod);
        font-weight: 700;
        color: var(--goldenrod);
        margin: 15px 0 0;
    }

    .overview-text a {
        color: inherit;
        text-decoration: none;
        font-weight: 700;
    }

    /* #about-me::before {
        position: absolute;
        width: 50px;
        height: 50px;
        content: "";
        background-color: var(--goldenrod);
        filter: blur(80px);
        left: 150px;
        top: 50px;
        z-index: -1;
    } */
</style>

<style is:global>
    nav * {
        opacity: 1;
        pointer-events: all;
        transition: opacity 1s ease-in-out;
    }
    nav.hidden-nav * {
        opacity: 0;
        pointer-events: none;
        background-color: var(--licorice);
        transition: opacity 1s ease-in-out;
    }
</style>

<script>
    import TypeIt from "typeit";

    var heroGradients = {
        student: "linear-gradient(to right, #de2b19, #860db9)",
        dev: "linear-gradient(to right, #264ddc, #0bd10f)",
        physicist: "linear-gradient(to right, #f66c06, #ffc207)",
    };

    async function heroAnimation() {
        return new Promise((resolve) => {
            new TypeIt("#hero-name", {
                speed: 70,
                lifeLike: true,
                afterComplete: () => {
                    new TypeIt("#hero-role", {
                        speed: 70,
                        lifeLike: true,
                        loop: true,
                        afterComplete: resolve,
                    })
                        .type(
                            `I'm a <span style='background: ${heroGradients.student}; -webkit-background-clip: text; -webkit-text-fill-color: transparent; text-shadow: -1ch -0.2ch 45px #c0392b, 2ch 0.1ch 45px #8e44ad;'>student.</span>`,
                        )
                        .pause(1000)
                        .delete(8, { speed: 40 })
                        .type(
                            `<span style='background: ${heroGradients.dev}; -webkit-background-clip: text; -webkit-text-fill-color: transparent; text-shadow: -1ch -0.2ch 45px #003cff, 2ch 0.2ch 45px #0cde0ce8;'>developer.</span>`,
                        )
                        .pause(1000)
                        .delete(12, { speed: 40 })
                        .type(
                            `an <span style='background: ${heroGradients.physicist}; -webkit-background-clip: text; -webkit-text-fill-color: transparent; text-shadow: -1.2ch 0ch 45px #f57815, 2ch 0.2ch 45px #f3d700e0;'>aspiring physicist.</span>`,
                        )
                        .pause(1000)
                        .go()
                        .destroy();
                },
            })
                .type("Hi!")
                .pause(500)
                .type(" I'm Silloky")
                .go()
                .destroy();
        });
    }

    heroAnimation().then(() => {
        console.log("Hero animation complete");
        $("#learn-more").css("opacity", "1");
        $("nav").removeClass("hidden-nav");
    });
</script>
